<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseTheme">
        <!-- Customize your theme here. -->
    </style>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="PhototActivity" parent="@android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DialogActivity" parent="@android:style/Theme.Translucent">
        <item name="android:background">#88000000</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog"  parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="button" >
        <item name="android:background">#00000000</item>
        <item name="android:colorBackground">#00000000</item>
    </style>

</resources>
